<?xml version="1.0" encoding="utf-8"?>
<!-- Single-choice dialog item with clear D-pad focus highlighting.
     Uses a CheckedTextView (required by setSingleChoiceItems).
     Do NOT set focusable=true â€” ListView manages D-pad focus on
     the row level. The background drawable reacts to activated
     (checked item) and focused/selected (D-pad cursor) states. -->
<CheckedTextView xmlns:android="http://schemas.android.com/apk/res/android"
 android:id="@android:id/text1"
 android:layout_width="match_parent"
 android:layout_height="wrap_content"
 android:minHeight="48dp"
 android:gravity="center_vertical"
 android:paddingStart="16dp"
 android:paddingEnd="16dp"
 android:paddingTop="12dp"
 android:paddingBottom="12dp"
 android:textColor="#e6edf3"
 android:textSize="14sp"
 android:background="@drawable/dialog_item_background"
 android:checkMark="?android:attr/listChoiceIndicatorSingle"
 android:checkMarkTint="#58a6ff"
 android:ellipsize="marquee"
 android:singleLine="true" />
