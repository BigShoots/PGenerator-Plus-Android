<?xml version="1.0" encoding="utf-8"?>
<resources>
 <!-- Base application theme -->
 <style name="Theme.PGeneratorPlus" parent="Theme.AppCompat.NoActionBar">
  <item name="colorPrimary">@color/accent</item>
  <item name="colorPrimaryDark">@color/bg_primary</item>
  <item name="colorAccent">@color/accent</item>
  <item name="android:windowBackground">@color/bg_primary</item>
  <item name="android:textColorPrimary">@color/text_primary</item>
  <item name="android:textColorSecondary">@color/text_secondary</item>
  <item name="android:statusBarColor">@color/bg_secondary</item>
  <item name="android:navigationBarColor">@color/bg_primary</item>
 </style>

 <!-- Fullscreen theme for pattern display -->
 <style name="Theme.PGeneratorPlus.Fullscreen" parent="Theme.AppCompat.NoActionBar">
  <item name="android:windowFullscreen">true</item>
  <item name="android:windowNoTitle">true</item>
  <item name="android:windowBackground">@color/black</item>
  <item name="android:windowContentOverlay">@null</item>
 </style>

 <!-- Dark AlertDialog for signal settings selectors on TV -->
 <style name="SelectorDialog" parent="Theme.AppCompat.Dialog.Alert">
  <item name="colorAccent">@color/accent</item>
  <item name="android:background">#21262d</item>
  <item name="android:textColorPrimary">#e6edf3</item>
  <item name="android:textColorSecondary">#8b949e</item>
  <item name="android:windowTitleStyle">@style/SelectorDialogTitle</item>
  <item name="android:listChoiceIndicatorSingle">?android:attr/listChoiceIndicatorSingle</item>
 </style>

 <style name="SelectorDialogTitle" parent="TextAppearance.AppCompat.Title">
  <item name="android:textColor">#58a6ff</item>
  <item name="android:textSize">16sp</item>
 </style>
</resources>
